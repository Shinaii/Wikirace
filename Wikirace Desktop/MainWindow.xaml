<Window x:Class="Wikirace_Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wikirace_Desktop"
        mc:Ignorable="d"
        Title="WikiRace Desktop" Height="450" Width="800">
    <Grid x:Name="MainMenu">
        <TextBlock Name="welcome" Text="Welcome to WikiRace" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,-300,0,0"/>
        <Button Name="Start" Content="Start Game" Click="Start_OnClick" Background="Transparent" BorderBrush="Transparent" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-200,100,0"/>
        <Button Name="Exit" Content="Exit" Click="Exit_OnClick" Background="Transparent" BorderBrush="Transparent" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-200,-100,0"/>
        
    </Grid>
</Window>
